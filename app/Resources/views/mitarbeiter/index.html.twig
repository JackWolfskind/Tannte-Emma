{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mitarbeiterliste</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Mitarbeiterid</th>                
                <th>Mitarbeitername</th>
                <th>Mitarbeitertelefon</th>
                <th>Mitarbeiteradresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mitarbeiter in mitarbeiters %}
            <tr>
                <td><a href="{{ path('mitarbeiter_show', { 'mitarbeiterid': mitarbeiter.mitarbeiterid }) }}">{{ mitarbeiter.mitarbeiterid }}</a></td>
                <td>{{ mitarbeiter.mitarbeitervorname }} {{ mitarbeiter.mitarbeitername }}</td>
                <td>{{ mitarbeiter.mitarbeitertelefon }}</td>
                <td>{{ mitarbeiter.mitarbeiteradresse }}</td>
                <td>
                    <div class="btn-group" role="group">
                            <a href="{{ path('mitarbeiter_show', { 'mitarbeiterid': mitarbeiter.mitarbeiterid }) }}" class="btn btn-info btn-sm">show</a>
                        
                            <a href="{{ path('mitarbeiter_edit', { 'mitarbeiterid': mitarbeiter.mitarbeiterid }) }}" class="btn btn-warning btn-sm">edit</a>
                    </div>   

                      
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
            <a href="{{ path('mitarbeiter_new') }}" class="btn btn-block btn-success">Create a new Mitarbeiter</a>
      
{% endblock %}
