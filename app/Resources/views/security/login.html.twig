{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="login-box box">
            <div class="box-header with-border">
                <h2 class="box-title" > Login</h2>
            </div>
            <div class="login-box-body">
                {% if error %}
                    <div class="box-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form class="form-horizontal" action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username" class="col-sm-2 control-label" >Username:</label>
                        <div class="col-sm-offset-2 col-sm-8">
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-2 control-label">Password:</label>
                        <div class="col-sm-offset-2 col-sm-8">
                            <input class="form-control" type="password" id="password" name="_password" />
                        </div>
                    </div>

                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-lg btn-primary btn-block">login</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock %}

