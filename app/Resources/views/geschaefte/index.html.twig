{% extends 'base.html.twig' %}
{% block body %}
    <div class="box">
        <div class="box-header with-border">
            <h1 class="box-title" >Gesch&auml;fteliste</h1>
        </div>
        <div class="box-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Datum</th>
                        <th>Art</th>
                        <th>Bearbeiter</th>
                        <th>Kunde</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    {% for geschaefte in geschaeftes %}
                        <tr>
                            <td><a href="{{ path('geschaefte_show', { 'geschaeftid': geschaefte.geschaeftid }) }}">{{ geschaefte.datum | date("d/m/Y")}}</a></td>
                            <td>{{ geschaefte.geschaeftsart }}</td>
                            <td>{{ geschaefte.angelegtvon }}</td>
                            <td><a href="{{ path('kunde_show', { 'kundenr': geschaefte.kundenr }) }}">Kunde</a></td>
                            <td>
                                <div class="btn-group" role="group">
                                        <a href="{{ path('geschaefte_show', { 'geschaeftid': geschaefte.geschaeftid }) }}" class="btn btn-sm btn-info">show</a>
                                    
                                        <a href="{{ path('geschaefte_edit', { 'geschaeftid': geschaefte.geschaeftid }) }}" class="btn btn-sm btn-warning">edit</a>
                                </div>  
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
           
                    <a href="{{ path('geschaefte_new') }}" class="btn btn-success btn-block">Create a new Gesch&aumlft</a>
               
        </div>
    </div>
{% endblock %}
